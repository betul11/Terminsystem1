<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"

    tools:context=".StudentHomeScreenActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="414dp"
        android:layout_height="59dp"
        android:background="#00000000"
        android:text="@string/terminsystem2"
        android:textAlignment="center"
        android:textColor="#54AFBC"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />


    <Button
        android:id="@+id/termin_create_button"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="91dp"
        android:text="@string/termin_create"
        android:textAlignment="center"
        android:textStyle="bold"
        app:backgroundTint="#54AFBC"
        app:layout_constraintBottom_toTopOf="@+id/Studenttermin_list_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="search for an appointment" />

    <Button
        android:id="@+id/Studenttermin_list_button"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_marginTop="250dp"
        android:text="@string/Studenttermin_list"
        android:textAlignment="center"
        android:textStyle="bold"
        app:backgroundTint="#54AFBC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="my appointments" />

    <Button
        android:id="@+id/Studentpassword_settings_button"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_marginTop="400dp"
        android:text="@string/Studentpassword_settings"
        android:textAlignment="center"
        android:textStyle="bold"
        app:backgroundTint="#54AFBC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>